{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16
  },
  "configurePresets": [
    {
      "name": "linux-base",
      "description": "WSL or remote Linux system.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "x64 Debug",
      "description": "linux (64-bit) Visual Studio environment. (Debug)",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "x64 Release",
      "description": "linux (64-bit) Visual Studio environment. (RelWithDebInfo)",
      "inherits": "linux-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-x86-debug",
      "displayName": "x86 Debug",
      "description": "Windows (32-bit) Visual Studio environment. (Debug)",
      "inherits": "linux-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x86-release",
      "displayName": "x86 Release",
      "description": "linux (32-bit) Visual Studio environment. (RelWithDebInfo)",
      "inherits": "linux-x86-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-x64-debug-clang",
      "displayName": "x64 Debug clang",
      "description": "linux (64-bit) Visual Studio environment. (Debug)",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-base",
      "description": "Target a remote macOS system.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "inherits": "macos-base"
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "x64 Debug",
      "description": "Windows (64-bit) Visual Studio environment. (Debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "x64 Release",
      "description": "Windows (64-bit) Visual Studio environment. (RelWithDebInfo)",
      "inherits": "windows-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x86-debug",
      "displayName": "x86 Debug",
      "description": "Windows (32-bit) Visual Studio environment. (Debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x86-release",
      "displayName": "x86 Release",
      "description": "Windows (32-bit) Visual Studio environment. (RelWithDebInfo)",
      "inherits": "windows-x86-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "hidden": true,
      "jobs": 32,
      "name": "base",
      "verbose": true
    },
    {
      "configurePreset": "linux-base",
      "jobs": 4,
      "hidden": true,
      "inherits": "base",
      "name": "linux-base"
    },
    {
      "configurePreset": "linux-x64-debug",
      "displayName": "linux debug x64",
      "inheritConfigureEnvironment": true,
      "inherits": "linux-base",
      "name": "linux-x64-debug"
    },
    {
      "configurePreset": "linux-x64-release",
      "displayName": "lin release x64",
      "inheritConfigureEnvironment": true,
      "inherits": "windows-base",
      "name": "linux-x64-release"
    },
    {
      "configurePreset": "macos-base",
      "hidden": true,
      "inherits": "base",
      "name": "macos-base"
    },
    {
      "configurePreset": "macos-debug",
      "displayName": "mac debug x64",
      "inheritConfigureEnvironment": true,
      "inherits": "macos-base",
      "name": "macos-debug"
    },
    {
      "configurePreset": "macos-release",
      "displayName": "mac release x64",
      "inheritConfigureEnvironment": true,
      "inherits": "macos-base",
      "name": "macos-release"
    },
    {
      "configurePreset": "windows-base",
      "hidden": true,
      "inherits": "base",
      "name": "windows-base"
    },
    {
      "configurePreset": "windows-x64-debug",
      "displayName": "win debug x64",
      "inheritConfigureEnvironment": true,
      "inherits": "windows-base",
      "name": "windows-x64-debug"
    },
    {
      "configurePreset": "windows-x64-release",
      "displayName": "win release x64",
      "inheritConfigureEnvironment": true,
      "inherits": "windows-base",
      "name": "windows-x64-release"
    }
  ]
}